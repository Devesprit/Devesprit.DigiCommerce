

@{
    ViewBag.Title = T("ExternalFailure");
    Html.AddHeadCustomParts("<meta name=\"robots\" content=\"noindex,nofollow\">");
}

<div class="container t-mar-35">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <div class="panel">
                <div class="panel-title pad-10">
                    <h5 class="no-mar">@T("ExternalFailure")</h5>
                </div>
                <div class="fs-14 pad-20 text-center">
                    <img src="~/Content/img/Social_Error_180px.png" class="pad-10" alt="Social Error" />
                    <h4>@T("ExternalFailure")</h4>
                    <p>@Html.Raw(T("ExternalFailureDesc"))</p>
                    <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Login", "User")">@T("ReturnLogin")</a>
                    <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Index", "Home")">@T("ReturnHome")</a>
                </div>
            </div>
        </div>
    </div>
</div>
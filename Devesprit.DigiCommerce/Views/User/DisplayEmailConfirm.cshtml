

@{
    ViewBag.Title = T("ConfirmAccount");
    Html.AddHeadCustomParts("<meta name=\"robots\" content=\"noindex,nofollow\">");
}

<div class="container t-mar-35">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <div class="panel">
                <div class="panel-title pad-10">
                    <h5 class="no-mar">@T("ConfirmAccount")</h5>
                </div>
                <div class="fs-14 pad-20">
                    <div class="text-center">
                        <img src="~/Content/img/ConfirmEmail_200px.png" alt="Check your Email" />
                    </div>
                    <h4 class="text-center">@T("ConfirmEmail")</h4>
                    <p class="text-justify">
                        @Html.Raw(T("ConfirmAccountDesc"))
                    </p>
                    <div class="text-center">
                        <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Index", "Home")">@T("ReturnHome")</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@{Layout = null;}
<div class="row justify-content-center">
    <div class="col-12 col-lg-6">
        <div class="panel">
            <div class="panel-title pad-10">
                <h5 class="no-mar">@T("Error")</h5>
            </div>
            <div class="fs-14 pad-20 text-center">
                <img src="~/Content/img/Error_250px.png" alt="Error" />
                <h4>@T("ServerError")</h4>
                <p>@Html.Raw(T("ErrorDesc"))</p>
                <button class="btn btn-outline-secondary btn-sm" role="button" onclick="window.history.go(-1); return false;">@T("ReturnPrevious")</button>
                <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Index", "Home", new { area = "" }, null)">@T("ReturnHome")</a>
                @if (User != null && User.Identity.IsAuthenticated && User.IsInRole("Admin") && !string.IsNullOrWhiteSpace(ViewBag.ErrorCode))
                {
                    <a class="btn btn-danger btn-sm" target="_blank" href="/elmah.axd/detail?id=@ViewBag.ErrorCode">@T("SeeDetails")</a>
                }
            </div>
        </div>
    </div>
</div>



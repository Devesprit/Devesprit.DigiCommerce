

@{
    ViewBag.Title = $"{T("Loading")} - {T("PleaseWait")}";
    Layout = Html.GetCurrentThemeLayoutAddress(true);

    Html.AddHeadCustomParts("<meta name=\"robots\" content=\"noindex,nofollow\">");
}

<div class="container-fluid t-pad-50">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8">
            <div class="panel text-center pad-v-50">
                <h3 class="text-primary">
                    <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
                </h3>
                <h4 class="no-b-mar text-muted">@T("Loading")</h4>
                <span class="text-muted">@T("PleaseWait")</span>
            </div>
        </div>
    </div>
</div>
